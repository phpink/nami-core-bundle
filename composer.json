{
    "name": "phpink/nami-core-bundle",
    "description": "Nami CMS - CORE Bundle",
    "type": "symfony-bundle",
    "keywords": ["Nami", "CMS", "REST", "API"],
    "homepage": "http://nami.php.ink",
    "license": "MIT",
    "authors": [
        {
            "name": "Geoffroy Pierret",
            "email": "geoffroy@php.ink"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "symfony/symfony": "3.1.*@dev",
        "doctrine/doctrine-bundle": "^1.6",
        "symfony/swiftmailer-bundle": "^2.3",
        "symfony/monolog-bundle": "^2.8",
        "sensio/distribution-bundle": "^5.0",
        "sensio/framework-extra-bundle": "^3.0.2",
        "incenteev/composer-parameter-handler": "^2.0",

        "symfony/assetic-bundle": "~2.7",
        "jms/serializer-bundle": "^1.1",
        "friendsofsymfony/rest-bundle": "^2.1",
        "nelmio/api-doc-bundle": "^2.4",
        "friendsofsymfony/http-cache-bundle": "2.0.*@dev",
        "willdurand/hateoas-bundle": "^1.0",
        "stof/doctrine-extensions-bundle": "3.0.*@dev",
        "twig/extensions": "1.1.0",
        "liip/imagine-bundle": "~1.0",
        "lexik/jwt-authentication-bundle": "2.0.*@dev",
        "gfreeau/get-jwt-bundle": "2.0.*@dev",
        "knplabs/knp-menu-bundle": "^2.0"
    },
    "require-dev": {
        "sensio/generator-bundle": "^3.0",
        "symfony/phpunit-bridge": "^3.0",

        "liip/functional-test-bundle": "1.6.x",
        "doctrine/orm": "^2.5",
        "doctrine/mongodb-odm": "1.0.*@dev",
        "doctrine/mongodb-odm-bundle": "3.0.*@dev"
    },
    "suggest": {
        "symfony/nami-admin-bundle": "For the back section of your application"
    },
    "autoload": {
        "psr-4": { "PhpInk\\Nami\\CoreBundle\\": "" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    }
}
